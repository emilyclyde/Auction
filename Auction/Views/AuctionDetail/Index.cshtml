@model IEnumerable<Auction.Models.AuctionDetail>

@{
    ViewBag.Title = "Index";
}
<body id="BackgroundGrad1">
    <h2>Auction Details</h2>
    <p>
        <span class="btn btn-default"> @Html.ActionLink("Back to Forms List", "Index", "Forms")</span>
    </p>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoorCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EarlyCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EarlyTicketDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Theme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoorCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EarlyCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EarlyTicketDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</body>