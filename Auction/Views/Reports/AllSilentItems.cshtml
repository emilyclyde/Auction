@model IEnumerable<Auction.Models.Item>

@{
    ViewBag.Title = "All Silent Auction Items";
}
<body id="BackgroundGrad1"  class="full">
    <h2 class="CrudTitle"> All Silent Auction Items</h2>
    <table class="table">
        <tr>
            <th class="TableDataIndex4" width="5%">
                <h5>Item #</h5>
            </th>
            <th class="TableDataIndex4" width="20%">
                <h5>Title</h5>
            </th>
            <th class="TableDataIndex4" width="65%">
                <h5>Description</h5>
            </th>
            <th class="TableDataIndex4" width="5%">
                <h6>Winning Bidder # </h6>
            </th>
            <th class="TableDataIndex4" width="5%">
                <h6>Bid Amount</h6>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.AuctionType == 2)
            {
                <tr class="TopLine">
                    <td width="5%">
                        <b>@Html.DisplayFor(modelItem => item.ID)</b>
                    </td>
                    <td width="20%">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td width="=65%">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td width="5%">
                        @Html.DisplayFor(modelItem => item.WinningBidder)
                    </td>
                    <td width="5%">
                        @Html.DisplayFor(modelItem => item.BidAmount)
                    </td>
                </tr>

            }
        }

    </table>
    <table id="IndexTable" style="padding: 5px;">
        <tr>
            <td>
                <input type="button" value="Reports Menu" onclick="location.href = '@Url.Action("Index", "Reports")'; return false;" class="btn btn-default" />
            </td>
            <td>
                <input type="button" value="Print" onclick="javascript: window.print(); return false;" class="btn btn-default" />
            </td>
            <td>
                <input type="button" value="Save" onclick="location.href = 'http://selectpdf.com/save-as-pdf'; return false;" class="btn btn-default" />
            </td>
        </tr>
    </table>
</body>
