@model Auction.Models.Tickets

@{
    ViewBag.Title = "Edit";
}
<div id="BackgroundGrad1"  class="full">
    <h2 class="CrudTitle">Edit Ticket Sales</h2>
    <p>
        <span class="btn btn-default"> @Html.ActionLink("Back to Forms List", "Index", "Forms")</span>
    </p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

    <table id="IndexTable">
        <tr>
            <td class="TableDataIndex9">
                <h4>Number of tickets sold early:</h4>
            </td>
            <td>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumEarlyTickets, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumEarlyTickets, "", new { @class = "text-danger" })
                </div>
            </td>
        </tr>
        <tr>
            <td class="TableDataIndex9">
                <h4> Number of tickets sold at the door:</h4>
            </td>
            <td>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumDoorTickets, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumDoorTickets, "", new { @class = "text-danger" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <h4 class="TableDataIndex9">Cost for an early ticket:</h4>
            </td>
            <td>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CostEarlyTickets, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CostEarlyTickets, "", new { @class = "text-danger" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <h4 class="TableDataIndex9">Cost for a ticket at the door:</h4>
            </td>
            <td>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CostDoorTickets, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CostDoorTickets, "", new { @class = "text-danger" })
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </td>
        </tr>
    </table>







    }

</div>
