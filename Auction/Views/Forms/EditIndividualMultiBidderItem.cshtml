@model Auction.Models.IndividualMultiBidderItem

@{
    ViewBag.Title = "Edit IndividualMultiBidderItem";
}

<style>
    footer {
        position: absolute;
        bottom: 0;
        width: 80%;
    }
</style>

<body id="BackgroundGrad1" class="full">
    <hgroup class="title">
        <h1 class="CrudTitle"> @Model.Title bid @*for Bidder <span style="color:darkred">@Model.Bidder_ID</span>*@</h1>
        <hr />
    </hgroup>
    <p>
        <span class="btn btn-default"> @Html.ActionLink("Back to Forms List", "Index", "Forms")</span>
    </p>
    @using (Html.BeginForm("EditIndividualMultiBidderItem", "Forms", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Bidder_ID)
        @Html.HiddenFor(model => model.Title)
       

        <table id="IndexTable" @*class="TableDataIndex2 TableIndex2"*@>
            <tr>
                <td>
                    <h4><b>Bidder</b></h4>
                </td>
                <td>
                    <h4><b>Bid Amount</b></h4>
                </td>
            </tr>
            <tr>
                <td class="TableDataIndex7">
                    @*@Html.LabelFor(model => model.BidAmount, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <h2 Class="CrudTitle" style="color:darkred"> @Model.Bidder_ID</h2>
                </td>
                <td class="TableDataIndex8">
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BidAmount, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BidAmount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                       
                <td colspan="2">
                    <input type="submit" value="Save" class="btn btn-default" />
                </td>
            </tr>
        </table>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>