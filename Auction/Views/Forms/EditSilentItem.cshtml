@model Auction.Models.Item

@{
    ViewBag.Title = "EditSilentItem";
}

<style>
    footer {
        position: absolute;
        bottom: 0;
        width: 80%;
    }
</style>

<body id="BackgroundGrad1">
    <hgroup class="title">
        <h1>Edit Item</h1>
        <hr />
    </hgroup>
    @using (Html.BeginForm("EditSilentItem", "Forms", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.AuctionType)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.ImageURL)
        @Html.HiddenFor(model => model.Title)
  

        <table class="TableDataIndex2">
            <tr>
                <td colspan="2" class="CrudTitle">
                    @Html.DisplayFor(modelItem => Model.Title)
                </td>
            </tr>
            <tr>
                <td colspan="2" id="Theme">
                    @Html.DisplayFor(modelItem => Model.Title)
                </td>
            </tr>
            <tr>
                <td id="Theme">
                    @Html.LabelFor(model => model.WinningBidder, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td class="col-md-10">
                    @Html.EditorFor(model => model.WinningBidder, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.WinningBidder, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td id="Theme">
                    @Html.LabelFor(model => model.BidAmount, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td class="col-md-10">
                    @Html.EditorFor(model => model.BidAmount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BidAmount, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Save" class="btn btn-default" />
                    @Html.ActionLink("Back to List", "AddWinningBidsSilent")
                </td>
            </tr>
        </table>















    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>








