@model Auction.Models.Bidder

@{
    ViewBag.Title = "Create";
}

<body id="BackgroundGrad1">
    @using (Html.BeginForm("Create", "Bidder", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @*@Html.HiddenFor(model => model.ID)*@
        @Html.HiddenFor(model => model.MultiItems)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table id="IndexTable">
            <tr>
                <td colspan="2">
                    <h2 class="CrudTitle">Add a New Bidder</h2>
                </td>
            </tr>
            <tr>
                <td>
                    <h4> Bidder Name</h4>
                </td>
                <td class="TableDataIndex2">
                    @Html.EditorFor(model => model.BidderName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BidderName, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    <h4> Bidder Contact info</h4>
                    <h6>Phone or Email</h6>
                </td>
                <td class="TableDataIndex2">
                    @Html.EditorFor(model => model.BidderContact, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BidderContact, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td colspan="2" class="TableDataIndex2">
                    <input type="submit" value="Create" class="btn btn-default" />
                    @Html.ActionLink("Back to List", "Index")
                </td>
            </tr>
            <tr>
                
            </tr>
        </table>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>