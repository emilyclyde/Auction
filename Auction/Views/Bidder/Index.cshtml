@model IEnumerable<Auction.Models.Bidder>

@{
    ViewBag.Title = "Index";
}
<body id="BackgroundGrad1" class="full">
    <h2 class="CrudTitle">Bidder</h2>
    <p>
        <span class="btn btn-default"> @Html.ActionLink("Back to Forms List", "Index", "Forms")</span>
    </p>

    <p id="ListButton2">
        @Html.ActionLink("Add a New Bidder", "Create")
    </p>
    <table class="table">
        <tr>
            <th class="TableDataIndex4">
                @Html.DisplayNameFor(model => model.BidderName)
            </th>
            <th class="TableDataIndex4">
                @Html.DisplayNameFor(model => model.BidderNumber)
            </th>
            <th class="TableDataIndex4">
                @Html.DisplayNameFor(model => model.BidderContact1)
            </th>
            <th class="TableDataIndex4">
                @Html.DisplayNameFor(model => model.BidderContact2)
            </th>
            <th class="TableDataIndex4">
                @Html.DisplayNameFor(model => model.BidderContact3)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a name="@Html.DisplayFor(modelItem => item.BidderNumber)"></a>
                    @Html.DisplayFor(modelItem => item.BidderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidderNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidderContact1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidderContact2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidderContact3)
                </td>
                <td class="TableDataIndex4">
                    <table class="TableDataIndex5">
                        <tr>
                            <td class="TableDataIndex5">
                                <div class="ButtonDiv1">@Html.ActionLink("Edit", "Edit", new { id = item.ID }) </div>
                            </td>
                            <td class="TableDataIndex5">
                                <div class="ButtonDiv1">@Html.ActionLink("Delete", "Delete", new { id = item.ID }) </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        }

    </table>
</body>